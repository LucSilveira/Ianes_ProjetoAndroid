<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardLoca2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="50dp"
        android:background="#5a3889"
        android:elevation="6dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="100dp"
            android:background="#5a3889"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="215dp"
                android:layout_height="17dp"
                android:layout_marginLeft="30dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text="Identificação da movimentação:"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idMovi"
                android:layout_width="52dp"
                android:layout_height="21dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-22dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origem"
                android:layout_width="185dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text="Origem da movimentação:"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origemItem"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="-18.5dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desti"
                android:layout_width="185dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text="Destino da movimentação:"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destinoItem"
                android:layout_width="96dp"
                android:layout_height="16dp"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="-17dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="167dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text="Data da movimentação:"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataItem"
                android:layout_width="108dp"
                android:layout_height="17dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="-18dp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>